<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Dating Place</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/datingplaces/<%=datingplace.id%>?_method=put"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="datingplace[title]"
          value="<%= datingplace.title %>"
          required
        />
        <div class="valid-feedback">Looks goods!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="datingplace[location]"
          value="<%= datingplace.location %>"
          required
        />
        <div class="valid-feedback">Looks goods!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Dating Place Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">â‚±</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Price"
            aria-describedby="price-label"
            name="datingplace[price]"
            value="<%= datingplace.price %>"
            required
          />
          <div class="valid-feedback">Looks goods!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="datingplace[description]"
          value=""
          required
        >
<%= datingplace.description %></textarea
        >
        <div class="valid-feedback">Looks goods!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Add Image</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="datingplace[images]"
          multiple
        />
        <div class="valid-feedback">Looks goods!</div>
      </div>
      <div class="mb-3">
        <% datingplace.images.forEach(function(img, i) { %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
          <label for="image-<%=i %>">Delete?</label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Dating Place</button>
      </div>
    </form>
  </div>
</div>
