<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Dating Places</h1>
<% for(let datingplace of datingplaces) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(datingplace.images.length) {%>
      <img
        src="<%= datingplace.images[0].url %>"
        alt="dating place image"
        class="img-fluid"
      />
      <% } else {%>
      <img
        src="https://res.cloudinary.com/dirp81rhi/image/upload/v1694682031/DatingMee/dnqjvm3ktjdndcxdcjnt.webp"
        alt="dating place image"
        class="img-fluid"
        crossorigin="anonymous"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= datingplace.title %></h5>
        <p class="card-text"><%= datingplace.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= datingplace.location %></small>
        </p>
        <a href="/datingplaces/<%= datingplace.id %>" class="btn btn-primary"
          >View <%= datingplace.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN%>";
  const datingplaces = { features: <%- JSON.stringify(datingplaces)%> }
</script>

<script src="/js/clusterMap.js"></script>
